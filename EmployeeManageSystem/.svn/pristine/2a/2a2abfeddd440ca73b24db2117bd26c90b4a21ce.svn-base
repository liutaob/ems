html, * {
    -webkit-user-select: text !important;
    -moz-user-select: text !important;
}

* {
    margin: 0;
    padding: 0;
}

body {
    overflow: hidden;
}

input {
    outline: none
}

.head {
    text-align: center;
}

.head img {
    width: 1200px;
    height: 77px;
    margin: 30px 0;
}

.content {
    overflow: hidden;
    min-width: 1200px;
    height: 549px;
    background: url(../images/bac.png) top center no-repeat;
    background-size: cover;
}

.enter {
    position: relative;
    width: 333px;
    margin: 100px auto 0;
}

.enter .title {
    border-bottom: 3px solid #3687eb;
}

.enter .title h3 {
    padding-bottom: 10px;
    color: #DDDBDB;
}

.message {
    margin: 5px 0;
    max-width: 332px;
    color: #3480DF;
}

.enterMessage {
    overflow: hidden;
    margin-top: 10px;
}

.user {
    width: 39px;
    height: 39px;
    border: 1px solid #C4C4C4;
    background: #F4F4F4 url(../images/user.png) center no-repeat;
    float: left;
    border-radius: 5px 0 0 5px;
}

.userText, .passworldText {
    width: 290px;
    height: 39px;
    border-top: 1px solid #C4C4C4;
    border-right: 1px solid #C4C4C4;
    border-bottom: 1px solid #C4C4C4;
    border-left: none;
    line-height: 39px;
    text-indent: 10px;
    letter-spacing: 1px;
    border-radius: 0 5px 5px 0;
}

input {
    outline: none;
}

.passworld {
    width: 39px;
    height: 39px;
    border: 1px solid #C4C4C4;
    background: #F4F4F4 url(../images/passworld.png) center no-repeat;
    float: left;
    border-radius: 5px 0 0 5px;
}

.code {
    width: 39px;
    height: 39px;
    border: 1px solid #C4C4C4;
    background: #F4F4F4 url(../images/shuru.png) center no-repeat;
    float: left;
    border-radius: 5px 0 0 5px;
}

.codeText {
    width: 170px;
    height: 39px;
    border-top: 1px solid #C4C4C4;
    border-right: 1px solid #C4C4C4;
    border-bottom: 1px solid #C4C4C4;
    border-left: none;
    line-height: 39px;
    text-indent: 10px;
    letter-spacing: 1px;
    border-radius: 0 5px 5px 0;
    float: left;
}

.codeImg {
    width: 111px;
    height: 39px;
    float: left;
    margin-left: 7px;
    text-align: center;
}

.codeImg img {
    padding: 7px 0;
    cursor: pointer;
}

.opinion {
    position: absolute;
    left: 345px;
    top: 190px;
}

.opinion img {
    width: 28px;
    height: 25px;
}

.enterButton input {
    width: 332px;
    height: 50px;
    background-color: #3687EB;
    color: #fff;
    font-size: 16px;
    letter-spacing: 10px;
    line-height: 50px;
    text-align: center;
    cursor: pointer;
    margin-top: 20px;
    border: none;
}

.foot {
    width: 100%;
    height: 144px;
    text-align: center;
    background-color: #F5F5F5;
    line-height: 44px;
    font-size: 12px;
    color: #8C9494;
}